{% extends "BourseBundle::layout.html.twig" %}

{% block title %} Depot {% endblock %}


{% block body %}


<section class="content">

	<div class="wrap">
		<fieldset>
			<legend>Saisir l'ID d'un produit</legend>
			<form class="form-search" method="get" action="{{ path('bourse_article') }}">
				<input type="text" name="id" placeholder="Saisir le numéro d'identification" class="input">
				<button type="submit" class="btn">Rechercher</button>
			</form>
		</fieldset>

		<fieldset>
			<legend>Afficher une liste d'article du dépot </legend>

			<p>
				 <a href="{{ path('bourse_all_article') }}"> <button type="submit" class="btn btn-primary">Tous les articles</button> </a>
			</p>

			<form class="form-search">
				<input type="text" placeholder="Saisir un nom" class="input-medium">
				<button type="submit" class="btn btn-inverse">Par nom</button>
			</form>

			<form class="form-search">
				<input type="text" placeholder="Saisir un prix" class="input-medium">
				<button type="submit" class="btn btn-inverse">Par prix</button>
			</form>

		</fieldset>
	</div>

</section>


{% endblock %}

